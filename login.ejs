            <table>
                <tr>
                    <td><h2>Login</h2></td>
                </tr>
                <tr>
                    <td><input type="text" name="username" placeholder="ID"></td>
                </tr>
                <tr>
                    <td><input type="password" name="password" 
                    placeholder=Password></td>
                </tr>
                <tr>
                    <td><input type="submit" value="Sign in" 
                    class="btn" ></td>
                </tr>
                <tr>
                    <td class="newsign"><a href="/join">
                    회원가입</a></td>
                </tr>
            </table>
        </section>
    </form>    
</body>
</html>
